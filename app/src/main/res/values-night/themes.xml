<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Yoga" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="colorControlHighlight">@color/colorSecondary</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:animationDuration">500</item>
        <item name="bottomSheetDialogTheme">@style/SheetStyle</item>
        <item name="textInputStyle">@style/TextInputStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/splash_background</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/gray_light</item>
        <item name="android:statusBarColor">@color/gray_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="ProgressDialogStyle">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenDialog" parent="Base.Theme.Yoga">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="SheetStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <!--<item name="bottomSheetStyle">@style/bottomSheetBackground</item>-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/gray_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curve_shape</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/curve_shape</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:foreground">@drawable/ripple</item>-->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ChipFilterStyle" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="chipBackgroundColor">@color/gray_light</item>
        <item name="chipCornerRadius">20dp</item>
    </style>

    <style name="ChipChoiceStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textColor">@color/mtrl_choice_chip_text_color</item>
        <item name="chipBackgroundColor">@color/mtrl_choice_chip_background_color</item>
        <item name="android:textSize">16sp</item>
        <item name="chipCornerRadius">20dp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="placeholderTextColor">@color/black</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <!--        <item name="tabTextColor">@color/gray_dark</item>-->
        <item name="tabGravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <!--        <item name="tabRippleColor">@color/gray_dark</item>-->
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:background">@drawable/curve_shape</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <!--        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>-->
        <item name="android:drawableTint" tools:targetApi="m">@color/colorSecondary</item>
        <item name="drawableTint" tools:targetApi="m">@color/colorSecondary</item>
        <item name="android:drawablePadding">10dp</item>
        <!--        <item name="android:foreground">@drawable/ripple</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="NavigationView" >
        <item name="fontFamily">@font/nunito</item>
        <!-- <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/colorSecondary</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>
</resources>